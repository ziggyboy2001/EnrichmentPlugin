{
    "manifest_version": 3,
    "name": "LinkedIn Profile Enrichment",
    "version": "1.0",
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/in/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }